<form class="new_exam_wrapper">
  <div class="form-group">
    <label for="exampleInputEmail1">模試名</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  </div>

  <div id="input_pluralBox">
    <label for="exampleInputEmail1">科目別成績記入</label>
    <div id="input_plural">
        <select class="form-control" id="exampleFormControlSelect1">
          <option>英語</option>
          <option>数学</option>
          <option>数学1A</option>
          <option>数学2B</option>
          <option>数学3</option>
          <option>国語</option>
          <option>漢文</option>
          <option>古典</option>
        </select>
        <input type="text" class="form-control" placeholder="点数">
        <input type="text" class="form-control" placeholder="偏差値">
        <input type="button" value="＋" class="add pluralBtn" style="background-color: gainsboro;">
        <input type="button" value="－" class="del pluralBtn" style="background-color: gainsboro;">
    </div>
  </div>

  <div class="form-group" style="margin-top: 10px;">
    <label for="exampleFormControlSelect1">第一志望校判定</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option>A</option>
      <option>B</option>
      <option>C</option>
      <option>D</option>
      <option>E</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">追加</button>
</form>

<script type="text/javascript">
  $(document).on("click", ".add", function() {
      $(this).parent().clone(true).insertAfter($(this).parent());
  });
  $(document).on("click", ".del", function() {
      var target = $(this).parent();
      if (target.parent().children().length > 1) {
          target.remove();
      }
  });
  </script>