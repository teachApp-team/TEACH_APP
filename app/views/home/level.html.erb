<%= render 'share/header' %>
<div style="padding-top: 80px;"></div>
<div style="padding: 0 10%;">
  <h4 style="margin: 20px 0">
    レベルを選択
  </h4>
  <div class="vocabulary-level">
    <ul>
      <% @levels.each do |level| %>
      <li><%= level %></li>
        <div class="number-of-vocabulary" style="margin:20px 3%">
          <ul style="padding: 10px 7%;">
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/50" style="color: black;">50単語</a></li>
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/100" style="color: black;">100単語</a></li>
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/150" style="color: black;">150単語</a></li>
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/150" style="color: black;">1回間違えた単語(10単語)</a></li>
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/150" style="color: black;">2回間違えた単語(10単語)</a></li>
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/150" style="color: black;">3回以上間違えた単語(10単語)</a></li>
          </ul>
        </div>
        <% end %>
      </ul>
  </div>
</div>