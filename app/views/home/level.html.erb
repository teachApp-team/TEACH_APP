<%= render 'share/header' %>
<div style="padding-top: 80px;"></div>
<div style="padding: 0 10%;">
  <h4 style="color: #364e96;
  padding: 0.5em 0;
  border-top: solid 3px #364e96;
  border-bottom: solid 3px #364e96;
  margin:35px 0px;">
    レベルを選択
  </h4>
  <div class="vocabulary-level">
    <ul>
      <% @levels.each do |level| %>
      <li style="margin-bottom:0px;"><span><%= level %></span></li>
      <div class="wordbook-progress" style="text-align: right;">
        <div class="progressWrapper">
          <progress max="100" value="<%= @current_student.corrects_of_level_percentage(level) %>"></progress>
        </div>
      </div>
      <div style="text-align: right;">
        <span style="font-size: 13px;"><%= @current_student.corrects_of_level_percentage(level) %>% 正解</span>
        <span>全<%= @wordbook.words.where(level: level).length %>単語</span>
      </div>
        <div class="number-of-vocabulary" style="margin:20px 3%">
          <ul style="padding: 10px 7%;">
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/10" style="color: black;">10単語</a></li>
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/30" style="color: black;">30単語</a></li>
            <li style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/50" style="color: black;">50単語</a></li>
            <li style="margin-bottom: 10px;"><a href="/home/choise_retest/<%= level %>/<%= @wordbook.id %>" style="color: black;">間違えた単語をテストする</a></li>
        </div>
        <% end %>
      </ul>
  </div>
</div>