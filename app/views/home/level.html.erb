<%= render 'share/header' %>
<div style="padding-top: 80px;"></div>
<div style="padding: 0 10%;">
  <h4 style="margin: 20px 0">
    レベルを選択
  </h4>
  <div class="vocabulary-level">
    <ul>
      <% @levels.each do |level| %>
        <li><%= level %></li>
        <div style="padding: 10px 7%;">
          <div style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/10" style="color: black;">10単語</a></div>
          <div style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/30" style="color: black;">30単語</a></div>
          <div style="margin-bottom: 10px;"><a href="/home/test/<%= level %>/<%= @wordbook.id %>/50" style="color: black;">50単語</a></div>
        </div>
      <% end %>
      </ul>
  </div>
</div>