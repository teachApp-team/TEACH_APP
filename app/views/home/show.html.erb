<%= render 'share/header' %>
<div style="padding-top: 80px;"></div>
<div style="padding: 0 10%;">
  <h4 style="margin: 20px 0">
    勉強したい教材を選択
  </h4>
  <div class="vocabulary-text">
    <ul>
    <% Wordbook.all.each do |book| %>
      <a href="/home/level/<%= book.id %>">
        <li style="margin-bottom: 0px;"><%= book.name %></li>
      </a>
      <div class="wordbook-progress" style="text-align: right;">
        <div class="progressWrapper">
          <progress max="100" value="<%= @current_student.corrects_of_book(book.id).length %>"></progress>
        </div>
      </div>
      <div style="text-align: right;">
        <span style="font-size: 13px;"><%= @current_student.corrects_of_book(book.id).length %> 正解</span>
        <span>全<%= book.words.length %>単語</span>
      </div>
    <% end %>
    </ul>
  </div>
</div>