<div class="word-test-index-wrapper">
  <% @wordbooks.each do |book| %>
    <h1 class="book-title"><%= book.name %></h1>
    <% book.levels.each do |level| %>
      <p><%= level %>レベル</p>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">生徒</th>
            <th scope="col">回答数</th>
            <th scope="col">正答率</th>
            <th scope="col">最後に受けた日</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <th class="result-td"><%= link_to student.full_name, "/word_tests/#{student.id}" %></th>
              <td class="result-td"><%= student.solved_results(book.id, level).length %>単語</td>
              <td class="result-td"><%= student.correct_percentage(book.id, level) %>%</td>
              <td class="result-td"><%= student.last_solved_at(book.id, level) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  <% end %> 
</div>