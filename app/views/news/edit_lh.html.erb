<section class="edit_learning_history">

<%= form_for(@lh, url: 'update', method: :post) do |f| %>
  <div class="stopwatch_container" style="text-align: center;">
        <h4 class="stopwatch_title">StopWatch</h4>
        <input id="" type="time" step="1" value=<%= @lh.learning_time %> style="padding: 5px; font-size: 20px; border-color:#3366FF;">
  </div>
  <div class="information_container">
      <div class="text_container">
        <%= f.label :learning_text, "学習教材", class: "col-4 label" %>
        <%= f.text_field :learning_text, class: "form-control" %>
      </div>
      <div class="comment_contaner">
        <%= f.label :comment, "コメント", class: "col-4 label" %>
        <%= f.text_field :comment, class: "form-control" %>
      </div>
  </div>
  <div class="form-group" style="text-align: center;">
    <%= f.submit "更新", class: "btn btn-outline-warning editButton" %>
  </div>
<% end %>
</section>